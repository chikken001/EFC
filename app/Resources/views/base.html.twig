<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}EFC{% endblock %}</title>
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

        {% block stylesheets %}
            {% stylesheets filter='?cssembed,cssrewrite,?yui_css'
                'bundles/Cms/css/style.css'
            %}

            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />

            {% endstylesheets %}
        {% endblock %}

        <link rel="icon" href="{{ asset('favicon.ico') }}" />

    </head>

    <body>

        {% block header %}{% endblock %}

        {% block flash %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">
                    <strong>Success !</strong> {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger">
                    <strong>Erreur !</strong> {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('info') %}
                <div class="alert alert-info">
                    <strong>Info !</strong> {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('warning') %}
                <div class="alert alert-warning">
                    <strong>Warning !</strong> {{ flashMessage }}
                </div>
            {% endfor %}
        {% endblock %}

        <main>{% block content %}{% endblock %}</main>

        {% block footer %}{% endblock %}

        {% block javascripts %}

            {% javascripts filter='?yui_js'
                'bundles/Cms/js/libs/jquery2.0.3.min.js'
                'bundles/Cms/js/offnav.js'
            %}
                <script src="{{ asset_url }}"></script>

            {% endjavascripts %}
        {% endblock %}

    </body>
</html>