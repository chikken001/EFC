{% extends "EfcBackOfficeBundle::layout.html.twig" %}

{% block title %}Supprimer {{ article.nom }} - {{ parent() }}{% endblock %}

{% block content %}

    <ol class="breadcrumb">
        <li>
            <a href="{{ path('efc_back_office_homepage') }}">Accueil</a>
        </li>
        <li>
            <a href="{{ path('efc_back_office_article_index') }}">articles</a>
        </li>
    </ol>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="alert alert-danger" role="alert">
                <p>Voulez vous supprimer "{{ article.titre }}" ?</p>

                <form action="{{ path('efc_back_office_article_delete', {'id': article.id}) }}" method="post">
                    <a href="{{ path('efc_back_office_article_view', {'id': article.id}) }}" class="btn btn-primary">
                        <i class="icon-chevron-left"></i>
                        Retour a l'article
                    </a>
                    <input type="submit" value="Supprimer" class="btn btn-danger"/>
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>

{% endblock %}
